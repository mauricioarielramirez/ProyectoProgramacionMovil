<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txvTipoTransaccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/txvIdTransaccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imgArrow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_arrow_credit" />

    <ImageView
        android:id="@+id/imgCurrency"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_currency_fav" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNombreTransaccionFavorito"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Pasaje normal urbano ParanÃ¡" />

        <TextView
            android:id="@+id/txvCuentaAsociadasFavoritos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="(3) Cuentas asociadas" />
    </LinearLayout>

</LinearLayout>
