<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Space
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/txvColumnaNroPeriodoRango"
        android:layout_width="12dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/fondo_textview_tabla"
        android:padding="4dp"
        android:text="1"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/txvColumnaFechaRango"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/fondo_textview_tabla"
        android:padding="4dp"
        android:text="12/01/2018 16:56"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/txvColumnaTransaccionRango"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/fondo_textview_tabla"
        android:padding="4dp"
        android:text="Carga semanal"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/fondo_textview_tabla"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgTipoMovimiento"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_arrow_credit" />
    </LinearLayout>

    <TextView
        android:id="@+id/txvColumnaMontoRango"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/fondo_textview_tabla"
        android:padding="4dp"
        android:text="$ 50000,00"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/txvColumnaSaldoRango"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/fondo_textview_tabla"
        android:padding="4dp"
        android:text="$ 80000000,00"
        android:textSize="10sp" />

    <Space
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>
