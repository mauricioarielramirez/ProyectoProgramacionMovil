<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="progmovil.gugler.com.pf">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"> <!-- Por defecto para todas las activity que no se configure con otra cosa -->
        <activity
            android:name="com.gugler.progmovil.proyectofinal.activity.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"> <!-- Permite usar el action bar para personalizarlo -->
        </activity>
        <activity
            android:name="com.gugler.progmovil.proyectofinal.activity.ConfigurarCuentaActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.gugler.progmovil.proyectofinal.activity.InicioActivity"
            android:label="@string/title_activity_inicio"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gugler.progmovil.proyectofinal.activity.ElegirDebitoActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="com.gugler.progmovil.proyectofinal.activity.MenuPrincipalActivity" />
        <activity
            android:name="com.gugler.progmovil.proyectofinal.activity.ElegirTransaccionActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.gugler.progmovil.proyectofinal.activity.ConfigurarTransaccionActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.gugler.progmovil.proyectofinal.activity.NormalActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.gugler.progmovil.proyectofinal.activity.TransaccionActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:windowSoftInputMode="adjustResize">

        </activity>
        <activity android:name="com.gugler.progmovil.proyectofinal.activity.AdministracionActivity"></activity>
    </application>

</manifest>